{
  "name": "mslauncher",
  "version": "0.0.1",
  "productName": "Moirca Studios Launcher",
  "description": "Modded Minecraft Launcher",
  "author": "Albert Marim贸n (https://github.com/Albertii04)",
  "license": "UNLICENSED",
  "homepage": "https://github.com/Albertii04/Moirca-Studios-Launcher",
  "bugs": {
    "url": "https://github.com/Albertii04/Moirca-Studios-Launcher/issues"
  },
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder build",
    "dist:win": "electron-builder build --win --x64",
    "dist:mac": "electron-builder build --mac",
    "dist:linux": "electron-builder build --linux",
    "lint": "eslint --config .eslintrc.json ."
  },
  "build": {
    "appId": "com.moircastudios.launcher",
    "productName": "Moirca Studios Launcher",
    "mac": {
      "category": "public.app-category.games",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "El launcher necesita acceso al micr贸fono para el chat de voz del juego. -Atentamente Albertii04 :)"
      },
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Moirca Studios Launcher",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "maintainer": "Albert Marim贸n",
      "vendor": "Albert Marim贸n",
      "synopsis": "Modded Minecraft Launcher",
      "description": "Custom launcher which allows users to join modded servers. All mods, configurations, and updates are handled automatically.",
      "category": "Game",
      "icon": "build/icon.png"
    },
    "directories": {
      "buildResources": "build",
      "output": "dist/${os}/${arch}"
    }
  },
  "engines": {
    "node": "20.x.x"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "adm-zip": "^0.5.16",
    "discord-rpc-patch": "^4.0.1",
    "ejs": "^3.1.10",
    "ejs-electron": "^3.0.0",
    "electron-updater": "^6.3.9",
    "fs-extra": "^11.1.1",
    "github-syntax-dark": "^0.5.0",
    "got": "^11.8.5",
    "helios-core": "~2.2.3",
    "helios-distribution-types": "^1.3.0",
    "jquery": "^3.7.1",
    "lodash.merge": "^4.6.2",
    "semver": "^7.6.3",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Albertii04/Moirca-Studios-Launcher.git"
  }
}
